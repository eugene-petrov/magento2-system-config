<?xml version="1.0"?>
<page layout="1column"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Snippet Config Example</title>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="snippet.config.example"
                   template="Snippet_SystemConfig::config.phtml">
                <arguments>
                    <argument name="config_pool" xsi:type="object">Snippet\SystemConfig\ViewModel\ConfigPool</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
